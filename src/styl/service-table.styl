.content-header
	font-weight bold
	font-size em(30)
	padding em(5) 0
_light_grey = #3B3B3B
_black = #2B2B2B
.services
	gs('fluid')
	.price:before
		content '$'
	.service-block
		h3
			font-size em(20)
			font-weight bold
			padding em(10) 0 0 20px
			color _light_grey
	.services-shaggy-logo
		text-align center
		img
			height 70px
	table
		width 99%
		margin-bottom em(20)
	tr.head
		td
			padding em(5) 0
			color _light_grey
			border none
			text-align right
			padding-right em(20)
	td
		padding em(10) 0
		text-align right
		// border-bottom 1px solid #B9B9B9
		vertical-align middle
	tr:last-child
		td
			border-bottom none
	td.service
		font-weight bold
		width 40%
		text-align left
		padding-left 20px
		color #313131
	td.price
		width 30%
		color #313131
		font-weight bold
		padding-right em(20)
	.thin
		font-weight 300
		padding em(5) 0 0
		font-size 90%
		font-style italic
		line-height 1.3
	tr:nth-child(2n)
		td
			background-color #F7F7F7
.services-footer
	h6
		font-size 90%
		font-weight bold
		color _black
	p
		padding em(5) 0 0
		font-size 90%
		color _light_grey

+media-query( only screen, min-device-width 320px, max-device-width 667px)
	.services
		td
			font-size 200%
	.services-footer
		h6, p
			text-align center
			font-size 80%