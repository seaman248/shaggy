	.homepage-prefooter
		.container
			gs('fixed', 12, 60px, 30px)
		.contact-form
			col(5)
			padding 0
			margin 0
		.map
			col(6.5)
			offset(0.5)
			float right
		button
			margin em(5) em(5) 0
+media-query( only screen, min-device-width 320px, max-device-width 667px)
	.homepage-prefooter
		.main-label
			font-size em(40)
		input
			font-size em(40)
		label
			font-size em(30)
