@import "kouto-swiss"

meyer-reset()

body
	font-family Verdana, sans-serif

nav
	position fixed
	width 100%
	padding em(10) em(0)
	background-color none
	z-index 10000
	-webkit-transition: all 0.5s ease;
	-moz-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
	.container
		gs('fluid')
.nav-before{
	background-color rgba(255, 255, 255, 0.4)
	width 100%
	height 300%
	position fixed
	z-index 20
	display none
}
.fixed-nav
	position fixed
	.nav-button
		i
			color white
.nav-logo
	display none
.nav-button
	i
		font-size em(45)
		cursor pointer
		color white
		background-color black
		padding 5px 10px
.nav-links
	display none
	margin em(5) 0 0
	padding em(5) em(20)
	background-color black
	li
		padding em(15) em(5)
		text-align center
	a
		text-decoration none
		color white
		font-weight bold
		transition color 0.12s ease-out 0.09s

+media-query( only screen, min-device-width 320px, max-device-width 667px)
	.nav-button
		i
			font-size em(100)
			color white
	.nav-logo
		display none
	.nav-links
		col(12)
		display none
		margin 0
		li
			padding em(45) 0
		a
			font-size em(50)


+media-query( all, min-device-width 1080px, min-width 1080px  )
	nav
		position absolute
		.container
			gs('fixed', 12, 60px, 30px)
	.fixed-nav
		position fixed
		background-color black
	.nav-button
		display none
	.nav-logo
		col(6)
		display none
		float left
		margin-left 0
		img
			position relative
			width 150px
			margin-top 7px
			float left
		.nav-logo-phone
			position relative
			float left
			display block
			font-weight 600
			color white
			font-size em(14)
			line-height em(50)
			left em(30)
	.nav-links
		col(12)
		background-color rgba(255, 255, 255, 0)
		float right
		padding em(5) em(0)
		margin-right 0
		ul
			float right
		li
			float left
			padding-left em(15)
			font-size em(13)
			font-weight bold
		li:last-child
			padding-right 0
		a
			color white
		a:hover
			color #B9B9B9
	.nav-links-with-logo
		col(6)
		margin-right 0
		float right


.landing
	background black
	padding em(10)
	padding-top em(150)
	background none
	background-color black
	.container
		background url('./img/shaggy-background-mobile.jpg')
		background-position 50%
		background-repeat no-repeat
		background-size cover
		clearfix()
.landing__info
	color white
	text-align center
	font-size em(14)
	position relative
	top -130px
	margin 0
	padding 0
	gs('fluid')
	.adress
		margin 15px 0
		line-height 1.3
		text-transform uppercase
	.phone
		p
			padding-bottom em(5)
		.number
			font-weight bold
	.phone .number
		width 50%
		display block
		background-color white
		color black
		font-size rem(20)
		padding em(5) 0
		border-radius 10px
		margin 0 auto
		margin-bottom em(5)
		p
			padding 0
			margin 0
	.schedule
		clearfix()
		padding em(10) 0
		text-transform uppercase
		.day
			font-weight bold
		.days
			col(6)
			max-width 100%
.landing__footer
	col(12)
	color white
	font-size em(14)
	font-style italic
	text-align center
	margin-top em(50)
	background-color black
	padding em(10)
.landing__loreal-logo
	col(12)
	text-align right
	margin-top em(100)

+media-query( only screen, min-device-width 320px, max-device-width 667px)
	.landing
		padding-top rem(450)
	.landing__info
		top rem(-420)
		.logo
			img
				width 40%
		.phone .number
			font-size rem(50)
		.adress
			padding 0 em(300)
			font-size em(13)
			margin em(45) 0
		.schedule
			p
				font-size em(30)
	.landing__footer
		font-size em(25)
		background-color black
		padding em(10) 0
	.landing__loreal-logo
		img
			width 30%

+media-query( all, min-device-width 1080px, min-width 1080px  )
	.landing
		background-position top center
		background-attachment fixed
		padding-top 15px
		background url('./img/shaggy-background.jpg')
		background-position top center
		background-repeat no-repeat
		background-size cover
		margin-bottom em(30)
		.container
			gs('fixed', 12, 60px, 30px)
			background none

	.landing__footer
		col(4)
		text-align center
		background none
		margin-left 0
		padding em(10) 0
	.landing__loreal-logo
		text-align right
	.landing__info
		col(4)
		top 13px
		margin-left 0
		.phone .number
			font-size em(17)
		.schedule
			.days
				col(12)
				margin-left 0
				margin-right 0
				padding-bottom em(15)

.content
	gs('fluid')
	clearfix()
	h5
		font-size em(30)
		font-weight bold
		position relative
		font-family serif
		font-weight 400
		font-size em(45)

	h4
		text-transform uppercase
		font-weight bold
		font-size em(16)
	.content-box-header
		padding em(20) 0
		text-align center
	.latest-news
		col(12)
		text-align center
	.video
		col(12)
		text-align center
		.youtube-video-container
			width 90%
			margin 0 auto
			display block
			background-color #DADADA
			padding em(7)
		.youtube-video
			position relative
			padding-bottom 56.25%
			padding-top 20px
			height 0
		.youtube-video iframe
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color #D6D6D6
			border 1px solid #DADADA


+media-query( all, min-device-width 1080px, min-width 1080px  )
	.content
		gs('fixed', 12, 60px, 30px)
		.latest-news
			col(6)
		.video
			col(6)
		.content-box-header
			padding em(15) 0 0
			margin-bottom em(15)
		.latest-news-h5
			margin-bottom em(11)
	.reviews
		gs('fixed', 12, 60px, 30px)
		.review
			col(6)

.reviews
	gs('fluid')
	margin-top em(60)
.review
	col(12)
	padding em(20) 0
	.review__avatar
		col(2)
		padding em(10) 0
		img
			max-width 100%
			padding 0
			margin 0
	.review__body
		col(10)
		text-align left
		font-size em(14)
		p:before, p:after
			content ' " '
		p
			padding-left em(10)
			font-style italic
			color #525252
	.review__subscribe
		col(12)
		text-align right
		font-weight bold
		padding em(10) 0
		font-size em(13)
		font-style italic
	.review__stars
		col(12)
		ul
			float right
		li
			float left
			padding em(4)
			background-color red
			margin 0 em(2)
			border-radius 5px
			color white
			cursor pointer
.reviews__more
	col(12)
	text-align right
	padding em(5) 0
	a
		color #5E5E5E
		text-decoration none
		font-style italic
		font-size em(14)

+media-query( only screen, min-device-width 320px, max-device-width 667px)
	.review
		.review__subscribe
			p
				font-size em(35)
		.review__stars
			li
				font-size em(35)
	.reviews__more
		padding em(14) 0
		a
			font-size em(35)

.magazine-links
	.container
		gs('fluid')
	padding em(20) 0
	h4
		font-size em(30)
		font-weight bold
		position relative
		font-family serif
		font-weight 400
		font-size em(45)
		padding-bottom em(10)
		text-align center
	.imgs
		text-align center
	img
		height 60px
		padding 0 em(10)
+media-query( all, min-device-width 1080px, min-width 1080px  )
	.magazine-links
		.container
			gs('fixed', 12, 60px, 30px)

.homepage-prefooter
	.container
		gs('fluid')
	background-color black
	color white
	text-align center
	padding em(20)
	line-height 1.3
	font-size em(15)
	margin-top em(20)
	h5
		font-size em(30)
		font-weight bold
		position relative
		font-family serif
		font-weight 400
		font-size em(45)
		padding-bottom em(20)
	p
		margin em(15) 0
	.map-with-form
		col(12)
		padding 0
		margin 0
	.contact-form
		col(12)
	.input-field
		col(12)
		margin 0 0
	.input-field:first-child
		p 
			margin-top 0
	.main-label
		text-align left
		font-size em(20)
		font-weight bold
		padding em(0) em(10)
