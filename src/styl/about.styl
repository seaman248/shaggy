.about-us-images
	col(12)
	text-align center
	img
		margin em(5)
		padding em(5)
		border 2px solid #DEDEDE
	.subscribe
		h6
			font-weight bold
			font-size 150%
			padding em(10) 0
.about-us-content
	col(12)
	p
		margin em(10) 0
		padding 0 em(20)
		text-align center
		line-height 1.2
		color #6D6D6D
	p.slogan
		text-align center
		padding em(20) 0
		font-size 110%
		font-weight bold
		color #212121
.about-video
	col(9)
	offset(1.5)
	padding-bottom em(10)
	.youtube-video-container
		width 90%
		margin 0 auto
		display block
		padding em(5)
		border 2px solid #DEDEDE
	.youtube-video
		position relative
		padding-bottom 56.25%
		padding-top 20px
		height 0
	.youtube-video iframe
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background-color #D6D6D6
		border 1px solid #DADADA

+media-query( all, min-device-width 1080px, min-width 1080px )
	.about-us-content
		col(9)
		offset(1.5)
		p
			text-align center
	